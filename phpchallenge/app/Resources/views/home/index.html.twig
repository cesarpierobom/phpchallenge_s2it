{% extends 'base.html.twig' %}

{% block metatags %}
	<meta charset="utf-8">
	<meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
{% endblock %}



{% block genericlinks %}
    <link rel="manifest" href="site.webmanifest">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="apple-touch-icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

{% endblock %}

{% block earlyjavascripts %}
    <script type="text/javascript">
        (function(e,t,n){var r=e.querySelectorAll("html")[0];r.className=r.className.replace(/(^|\s)no-js(\s|$)/,"$1js$2")})(document,window,0);
    </script>

    <script type="text/javascript">
        const api_v1 = "{{ api_url }}";
    </script>
{% endblock %}



{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="{{ asset('css/main.css') }}" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}





{% block body %}

<div class="modal" id="modalMessage" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalMessageLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalMessageBody">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


<div id="loader" class="d-none"></div>
<div class="container-fluid h-100 background">
    <div class="row height33"></div>
    <div class="row main">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-4">
            <div class="card h-100">
                <div class="card-header text-center">
                    File Upload
                </div>
                <div class="card-body">
                    <form class="form h-100 text-center" action="javascript:void(0)" method="POST">
                        <div class="row">
                            <div class="col-sm-12">
                                <input type="file" class="form__input-file--hidden" name="file" id="file" multiple="">
                                <label for="file" class="margintop5"><strong>Choose files</strong> or drag and drop them here</label>
                                <div id="icon">
                                    <i class="material-icons">folder_open</i>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div id="counter"> 0 files</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <button class="btn btn-primary btn-sm" id="submit" type="button">Upload</button>
                                <button class="btn btn-danger btn-sm" id="reset" type="button">Reset</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card h-100 card-max" >
                <div class="card-header text-center">
                    Results
                </div>
                <div class="card-body" id="results">

                </div>
            </div>
        </div>
    </div>
</div>




{% endblock %}







{% block javascripts %}
    <script src="{{ asset("js/base/modernizr-custom.js") }}"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.js" integrity="sha256-5mrieoHKmiiWf93sjVifOZelwu2Pa2xrDii5Uz3+8E8=" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper-utils.js" integrity="sha256-f0O5YW7WctUrM4NEZUjQrOqrY2dhN61iXXZ77z62do8=" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

	<script src="{{ asset("js/home/home.js") }}"></script>
{% endblock %}


